header.docked
  float                         right
  width                         50%

nav.docked
  -webkit-column-width          100px
  -moz-column-width             100px
  column-width                  100px
  float                         left
  height                        100%

footer.docked
  display                       none

[am-icon]
  background-image              url("paper_texture.png")
  box-shadow                    0 0 4px 0 #0003
  display                       inline-block
  font-size                     .8em
  line-height                   1em
  padding                       .4em .2em
  text-align                    center
  vertical-align                top
  width                         96px
  
  a
    text-decoration             none
  
  img::after
    display                     block