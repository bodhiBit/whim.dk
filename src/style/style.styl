page_width = 1024px
@import url("http://fonts.googleapis.com/css?family=Waiting+for+the+Sunrise|Homemade+Apple")
@import "_reset"

html
  background-color      #fff
  color                 #666
  font-family           "Waiting for the Sunrise", cursive

nav
  text-align            center
  
  li
    display             inline-block
    margin              1em

body > header, main > article
  background-color      white
  border                32px solid transparent
  border-image          url("window_border.png") 42 42 round
  
  h1
    font-family         "Homemade Apple", cursive
    font-size           1.5em

header
  text-align            center
  
  h1
    font-size           2em

footer
  background-color      #eee
  font-size             .8em
  padding               .5em
  text-align            center

// Whimdows!

whim-window
  background-color      white
  border                32px solid transparent
  border-image          url("window_border.png") 42 42 round
  border-radius         32px
  perspective           1000px
  position              absolute
  
  left                  1em
  top                   1em
  width                 80%
  height                80%
  
  h1
    background-image    url("horizontal_line.png")
    background-position bottom
    background-repeat   repeat-x
    cursor              move
    font-size           1.2em
    font-weight         bold
    margin              -24px -24px 0 -24px
    text-align          center
  
  whim-viewport
    background-color    #eee
    overflow            hidden
    position            absolute
    
    left                -20px
    top                 1em
    right               24px
    bottom              24px
    
    article
      border-width      0
      position          absolute
      
      left              0
      top               0
      width             100%
  
  whim-scrollbar
    display             block
    background-color    #ddd
    background-image    url("vertical_line.png")
    background-repeat   repeat-y
    float               right
    margin              0 -24px
    
    width               24px
    height              100%
    height              calc(100% - 24px)
    
    button
      display           block
      
      width             100%
      height            24px
    
    whim-scrollshaft
      display           block
      position          relative
      
      width             100%
      height            80%
      height            calc(100% - 48px)
      
      whim-scrollslider
        background-color  #ccc
        display         block
        position        absolute
        
        top             10%
        width           100%
        height          50%
  
  .ui-resizable-se
    cursor              se-resize
    position            absolute
    
    right               -24px
    bottom              -24px
    width               24px
    height              24px



@import "_whimdow"

.noSelect
  -webkit-user-select   none
  -moz-user-select      none
  -ms-user-select       none
  user-select           none